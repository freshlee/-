<!--index.wxml-->
<view class="nav">
<view class="{{myindex==0?'bechosen':''}}" bindtap="video">视频课程</view>
<view class="{{myindex==1?'bechosen':''}}" bindtap="course">线下课程</view>
<view class="{{myindex==2?'bechosen':''}}" bindtap="article">线上文章</view>

</view>
<!--线上视频-->
<swiper style="height:{{myheight-155}}px" current="{{myindex}}">
<block>
<swiper-item>
<view class="case" wx:for="{{3}}">
<view class="title_case">
<view class="picture list"> <image src="../../images/video.jpg"></image> </view>
<view class="info list">
<view class="classname">MK-linux运维</view>
<view class="classname">openstack-slatstack学习</view>
<view class="priceattr">免费</view>
</view>
</view>
</view>
<!--线下课程-->
</swiper-item>
<swiper-item >
<scroll-view scroll-y style="height:{{myheight-155}}px">

<view class="coursebody">

<view class="coursecase" wx:for="{{[1,2,3]}}">

<view class="header">

<view class="protrait"> <image src="../../images/video.jpg"></image> </view>

<view class="info">
<view class="name">名称</view>
<view class="address">地点</view>
<view class="status">状态</view>

</view>

</view>

<view class="bottom"  >

<view class="detail">课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍
<view class="hint"></view>
</view>

</view>

</view>


</view>


</scroll-view>
</swiper-item>
<!--线上文章-->
<swiper-item>
<scroll-view scroll-y style="height:{{myheight-155}}px">

<view class="articlecase">
<view class="pic"> <image src="../../images/video.jpg"></image> </view>
<view class="info">
<view class="name">书名</view>
<view class="detailinfo">所属机构</view>
<view class="detailinfo">作者</view>
<view class="price">免费</view>
</view>
</view>


</scroll-view>
</swiper-item>


</block>
</swiper>



