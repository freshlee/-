/* index.wxss */
@import "../../wxParse/wxParse.wxss";
page{

}
.nav{
  background: white;
}
.nav>view{
  display: inline-block;
  width: 25%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 17px;
  font-weight: bold;
  box-sizing: border-box;
  border-bottom:2rpx solid lightgrey; 
}
.banner image{
  height: 150px;
  display: block;
}
.sum{
  padding: 20rpx;
}
.top{
  margin-bottom:15rpx; 
}
.sum .bottom>view{
   height: 70rpx;
   line-height: 70rpx;
}
.bottom>view{
  display: inline-block;
}
.bottom .right{
  float: right;
  font-size: 35rpx;
  color: darkorange;
}

#mapbox{
  height: 400rpx;  
}
#myMap{
  width:100%;
  height: 400rpx;
}
.case{
  padding: 30rpx 30rpx;
}
.case .title{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  color: #0767C8;
}
.bechosen{
 border-top: 4rpx solid rgb(7,103,200);
 border-bottom:none !important;
}
.borderboth{
border-left: 2rpx solid lightgrey;
border-right: 2rpx solid lightgrey;
}
.borderleft{
border-left: 2rpx solid lightgrey;
}
.borderright{
border-right: 2rpx solid lightgrey;
}
.intro{
  padding: 0 30rpx 50rpx;
  background: white;
  margin-bottom: 20rpx;
  box-shadow:0 2rpx 5rpx #888888;
}
.intro>view:first-of-type{
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: black;
  vertical-align: top;
}
.content view,.content{
  color: black;
  font-size: 25rpx;
  line-height: 45rpx;
}
