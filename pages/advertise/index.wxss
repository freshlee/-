/* index.wxss */
@import "../../wxParse/wxParse.wxss";
page{

}
.nav{
  background: white;
}
.nav>view{
  display: inline-block;
  width: 25%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 17px;
  font-weight: bold;
  box-sizing: border-box;
  border-bottom:2rpx solid lightgrey; 
}
.banner image{
  height: 150px;
  display: block;
}
.sum{
  padding: 20rpx;
}
.top{
  margin-bottom:15rpx; 
}
.sum .bottom>view{
   height: 70rpx;
   line-height: 70rpx;
}
.bottom>view{
  display: inline-block;
}
.bottom .right{
  float: right;
  font-size: 35rpx;
  color: darkorange;
}

#mapbox{
  height: 400rpx;  
}
#myMap{
  width:100%;
  height: 400rpx;
}
.case{
  padding: 30rpx 30rpx;
}
.case .title{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  color: #0767C8;
}
.bechosen{
 border-top: 4rpx solid rgb(7,103,200);
 border-bottom:none !important;
}
.borderboth{
border-left: 2rpx solid lightgrey;
border-right: 2rpx solid lightgrey;
}
.borderleft{
border-left: 2rpx solid lightgrey;
}
.borderright{
border-right: 2rpx solid lightgrey;
}
.intro{
  padding: 0 30rpx 50rpx;
  background: white;
  margin-bottom: 20rpx;
  box-shadow:0 2rpx 5rpx #888888;
}
.intro>view:first-of-type{
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: black;
  vertical-align: top;
}
.content view,.content{
  color: black;
  font-size: 25rpx;
  line-height: 45rpx;
}
.course{
  padding: 0 20rpx;
}
.course>view{
  display: inline-block;
  width:33.33%;
  position: relative;
}
.course image{
  width: 220rpx;
  height: 150rpx;
  position: absolute;
  left: 50%;
  margin-left: -110rpx;
}
.course .title{
 clear:both;
 margin-top:150rpx;
}
.course .price{
  color:darkorange;
}
.teacher{
  border-bottom:1rpx solid lightgrey;
  padding: 30rpx 0 ; 
}
.teacherprotrait image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.teacher>view{
  display: inline-block;
  vertical-align: top;
}
.teacher .box{
  margin-left: 20rpx;
  width:550rpx;
  white-space: pre-wrap;
  word-break: break-all;
  word-wrap: break-word;
}
.teacher .boxtop>view{
  display: inline-block;
  vertical-align: middle;
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
    color: dimgray;
}
.teacher .boxtop .name{
  font-size: 29rpx;
  color: black;
  font-weight: bold;
}
.teacher .boxtop .reputation{
  margin-left: 150rpx;
  
}
.reputation image{
  width: 25rpx;
  height: 25rpx;
}
.teacher .boxtop .amount{
  float:right;
  margin-top:7rpx; 
}
.teacher .bottom{
  color: black;
  line-height: 50rpx;
  height: 150rpx;
  font-size: 22rpx;
  overflow: hidden;
}
.comment{
  padding: 0rpx 30rpx;
  background: white;
}
.commentheader{
  border-bottom:1rpx solid lightgray;
}
.commentheader>view{
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
}
.commentheader .more{
  float: right;
  color: dimgrey;
  font-size: 25rpx;
}
.list{
  margin: 20rpx 0 0;
}
.list>view{
  display: inline-block;
  vertical-align: top;
}
.protrait image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 50rpx;
}
.list .box{
  width: 538rpx;
  border-bottom:1rpx solid lightgrey; 
}
.top>view{
  color:black;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: top;
}
.top .name{
  color: #0767C8;
}
.top .right{
  color: dimgrey;
  float: right;
}
.right>view{
    margin-left: 20rpx;
}
.top image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  transform: translateY(5rpx)
}
.right>view{
  display: inline-block;
  vertical-align:top;
}
.middle{
  height: 40rpx;
  line-height: 40rpx;
  color: dimgrey;
}
.bottom{
  margin-top:10rpx;
  font-size: 22rpx;
}
