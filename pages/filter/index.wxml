<!--index.wxml-->
<view class="body">
<view class="filter case">
<view class="list">
<view class="typename">类别</view>
<view class="{{cates==item.id?'typeon':'type'}}" wx:for="{{type}}" bindtap="chosecate" data-cate="{{item.id}}"
>{{item.name}}</view>
<view class="{{cates==0?'typeon':'type'}}"  bindtap="chosecate" data-cate="0"
>全部</view>
</view>
<view class="list">
<view class="typename" >收费</view>
<view class="{{pays==1?'typeon':'type'}}" bindtap="chosepay"  data-pay="1">免费</view>
<view class="{{pays==2?'typeon':'type'}}" bindtap="chosepay"  data-pay="2">VIP</view>
<view class="{{pays==3?'typeon':'type'}}" bindtap="chosepay"  data-pay="3">收费限时</view>
<view class="{{pays==0?'typeon':'type'}}" bindtap="chosepay"  data-pay="0">全部</view>
</view>
<view class="list">
<view class="typename">类型</view>
<view class="{{types==1?'typeon':'type'}}" bindtap="chosetype" data-type="1">视频</view>
<view class="{{types==2?'typeon':'type'}}" bindtap="chosetype" data-type="2">文章</view>
<view class="{{types==3?'typeon':'type'}}" bindtap="chosetype" data-type="3">线下</view>
<view class="{{types==0?'typeon':'type'}}" bindtap="chosetype" data-type="0">全部</view>
</view>
<view class="panel" bindtap="sure">
开始筛选
</view>
</view>
<view class="case" wx:for="{{cases}}">
<view class="picture li"> <image src="{{item.thumb}}"></image> </view>
<view class="info li">
<view class="name list">{{item.title}}</view>
<view class="attr list">属性</view>
<view class="attr list">属性</view>

</view>
<view class="property li">
<view class="classname">视频</view>
<view class="classname">付费</view>
</view>
</view>

</view>