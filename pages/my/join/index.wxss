/* index.wxss */
page{
  background: gainsboro;
  padding:20rpx 0;
}
.form{
  background:white;
}
.case{
  padding:20rpx  20rpx 20rpx 0;
  margin-left: 20rpx;
  border-bottom:1rpx solid gainsboro;
  background: white;
}
.case>view{
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
}
.case .vertify{
  float: right;
  color: white;
  background:#0767C8;
  padding: 5rpx;
  border-radius: 5rpx;
}
.case .gainaddress{
  float: right;
  margin-right: 20rpx;
}
.case .gainaddress image{
  width: 50rpx;
  height:50rpx;
}
.case .input{
  margin-left:20rpx;
}
.case .title{
  width: 120rpx;
}
.case .input{
  width:400rpx;
}
.input input{
  font-size:30rpx;
}
.message{
  padding: 20rpx;
  margin: 20rpx 0;
  background: white;
}
.message textarea{
  border-radius: 10rpx;
}
.submit button{
  color: white;
  background:#0767C8; 
}