page{
  background: #f4f4f4;
}
.board{
  padding: 20rpx 60rpx;
  background: white;
  border-bottom:1rpx solid #f4f4f4;
  position: relative;
  z-index: 99;
}
.board>view{
  display: inline-block;
  vertical-align: top;
}
.board .board_left>view{
  line-height: 60rpx;
  font-size: 30rpx;
}
.board .board_right{
  margin: 15rpx 0;
  float: right;
  padding: 20rpx 30rpx;
  font-size: 35rpx;
  color: white;
  background: #0767C8;
  border-radius: 10rpx;
}
/*展开面板*/
.expend{
  position: relative;
  margin-top:-240rpx;
  z-index: -1;
  transition-property: margin-top;
  transition-duration: 0.5s
}
.expendon{
  margin-top:0;
}
.panel{
  padding: 20rpx 250rpx;
}
.controller>view{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  vertical-align: top;
}
.controller .del,.controller .add{
  width:20%;
  text-align: center;
  background: lightgreen;
}
.controller .interface{
  width: 60%;
  text-align: center;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.interface .window{
  color: white;
  background: #0767C8;
  font-size: 45rpx;
}
.bottom{
  padding: 20rpx 60rpx;
  position: relative;
}
.bottom>view{
  display:inline-block;
  font-size: 35rpx; 
}
.bottom .cal{
  line-height: 105rpx;
}
.cal text{
  font-size: 45rpx;
  color: red;

}
.bottom .pay{
  right: 0;
  font-size: 45rpx;
  position: absolute;
  margin-right: 50rpx;
  padding: 15rpx 30rpx;
  color: white;
  background: darkorange;
  border-radius: 15rpx;

  }
  .expend{
    background: white;
  }

  .show{
    background: white;
    margin-top:10rpx;
  }
  .show .title{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 35rpx;
    padding: 0 30rpx;
  }
  .show .case image{
    height: 200rpx;
    width:100%;
  }
  /*课程列表*/
  .case{
  padding:0 60rpx;
  margin:5rpx 0;
}

  .title{
  font-size: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.title_case{
  padding:20rpx 0;
  border-bottom:1rpx solid gainsboro;
}
.title_case .list{
  display: inline-block;
  width:50%;
  vertical-align: top;
  box-sizing: border-box;
}
.title_case .info{
  height: 150rpx;
  line-height: 37.5rpx;
  padding-left:20rpx;
}
.info>view{
  font-size: 30rpx;
  line-height: 70rpx;
}
.title_case image{
  height: 150rpx;
  width: 100%;
}
.title_case .priceattr{
  line-height: 75rpx;
  height: 75rpx;
  font-size:35rpx;
  color:green;
}