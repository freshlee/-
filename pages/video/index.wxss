/* pages/video/index.wxss */
.toolbar view{
  display: inline-block;
}
view{
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
  
}
.contain  .window{
  display: inline-block;
  width:100%;
  vertical-align: top;
  padding: 80rpx;
  box-sizing: border-box;
  
}
.toolbar .list{
  width:25%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
}
.window .ul{
  font-size: 40rpx;
}
.window .li{
  text-align: left;
  font-size:30rpx;
  text-indent: 2em;
}
#section .li{
  margin: 20rpx 0;
}
#detail .case{
  padding:50rpx 0;
  border-bottom:1rpx solid lightgrey; 
}
#detail .title{
  font-size: 40rpx;
}
#detail .intContent{
  font-size: 35rpx;
  text-indent: 2em;
}
#detail .teacher image{
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
}
#detail .teacher > view{
   display: inline-block;
}
#teacher .remark .header>view{
  display: inline-block;
  }
.header:after{
  content: "";
  display: block;
  clear: both;
}
.header{
  margin-bottom: 30rpx;
}
.header .num{
  float: left;
  font-size: 30rpx
} 
.header .num text{
  font-size: 40rpx
} 
.header .more{
  float: right;
}

.user_info view{
  display: inline-block;
}
.user_info image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.user .content{
  padding-left:70rpx;
}
