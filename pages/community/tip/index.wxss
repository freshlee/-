/* index.wxss */
.header{
  padding: 30rpx 30rpx 100rpx;
  background: rgb(7,103,200);
  font-size: 45rpx;
}
.user{
  position: relative;
  width: 700rpx;
  left: 27rpx;
  top:-50rpx;
  background: white;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 5rpx #888888;
  border-radius: 5rpx;
}
.user>view{
  display: inline-block;
  vertical-align: middle;
}
.user image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.content,.content view{
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}